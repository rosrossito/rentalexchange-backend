<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="29112015-01" author="opasechnik">
        <comment>Create table for store System User information</comment>
        <createTable tableName="SystemUser">
            <column name="ID" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="LOGIN" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
            <column name="PASSWORD" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="IMAGE" type="varchar(600)">
                <constraints nullable="true"/>
            </column>
            <column name="STATUS" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="SystemUser_SEQ"/>
    </changeSet>

    <changeSet id="05122015-02" author="ros">
        <comment>Create table for store activation history</comment>
        <createTable tableName="ActivationLink">
        <column name="ID" type="bigint">
            <constraints nullable="false" primaryKey="true"/>
        </column>
            <column name="LINKUUID" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
            <column name="SYSTEMUSER_ID" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="TYPE" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createSequence sequenceName="ActivationLink_SEQ"/>
    </changeSet>


</databaseChangeLog>